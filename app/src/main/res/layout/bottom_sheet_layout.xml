<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_bg">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imgProduct"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Cơm gà xối mỡ"
            android:id="@+id/txtNameProduct"
            android:padding="10dp"
            android:layout_toRightOf="@id/imgProduct"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="đ100000"
            android:id="@+id/txtPriceProduct"
            android:padding="10dp"
            android:layout_toRightOf="@id/imgProduct"
            android:layout_below="@id/txtNameProduct"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ABABAB"
            android:layout_below="@id/imgProduct"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Số lượng"
            android:id="@+id/txtTitleSL"
            android:padding="10dp"
            android:layout_below="@id/imgProduct"
            android:layout_marginTop="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProduct"
            android:layout_marginTop="18dp"
            android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/btnMinusProduct"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/circle_border"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_gray"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:id="@+id/edtSL"
                    android:inputType="number"
                    android:numeric="integer"
                    android:text="1"
                    />

                <TextView
                    android:id="@+id/btnPlusProduct"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/circle_border"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_mualai"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/btnAddCart"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txtTitleSL"/>


</RelativeLayout>