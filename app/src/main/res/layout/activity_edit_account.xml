<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditAccount">
    <TextView
        android:id="@+id/ThanhTieuDe"
        android:text="Chỉnh sửa tài khoản"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:background="@color/privateColor"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/HoVaTen"
        android:layout_below="@+id/ThanhTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và tên :"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:drawablePadding="13dp"
        />
    <EditText
        android:layout_below="@+id/HoVaTen"
        android:id="@+id/et_hvt"
        android:drawableLeft="@drawable/baseline_account_circle_24_black"
        android:drawablePadding="13dp"
        android:textSize="15dp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Email"
        android:layout_below="@+id/et_hvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:drawablePadding="13dp"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_below="@+id/Email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:drawablePadding="13dp"
        android:textSize="15dp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/SDT"
        android:layout_below="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại :"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:drawablePadding="13dp"
        />
    <EditText
        android:id="@+id/et_SDT"
        android:layout_below="@+id/SDT"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:drawablePadding="13dp"
        android:textSize="15dp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Address"
        android:layout_below="@+id/et_SDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ :"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:drawablePadding="13dp"
        />
    <EditText
        android:id="@+id/et_address"
        android:layout_below="@+id/Address"
        android:drawableLeft="@drawable/baseline_house_24"
        android:drawablePadding="13dp"
        android:textSize="15dp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/Update"
        android:layout_below="@+id/et_address"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/privateColor"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>