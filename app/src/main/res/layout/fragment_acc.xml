<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/privateColor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/logocook"
                android:src="@drawable/logocook"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/NameUser"
                android:text="Lê Hoài Nam"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logocook"/>
            <TextView
                android:id="@+id/CSTK"
                android:text="Chỉnh Sửa Tài Khoản"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_below="@+id/NameUser"
                android:drawableRight="@drawable/baseline_swipe_right_alt_24"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/Menu"
                android:layout_below="@+id/CSTK"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/UDCT"
                    android:text="Ưu đãi của tôi"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/icon_km"
                    android:drawablePadding="25dp"
                    android:drawableRight="@drawable/icon_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/LSMH"
                    android:text="Lịch sử mua hàng"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/UDCT"
                    android:drawableLeft="@drawable/icon_lsmh"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/GH"
                    android:text="Giỏ hàng"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/LSMH"
                    android:drawableLeft="@drawable/icon_gh"
                    android:drawablePadding="25dp"
                    android:drawableRight="@drawable/icon_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/TTMH"
                    android:text="Tiếp tục mua hàng"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/GH"
                    android:drawableLeft="@drawable/icon_ttmh"
                    android:drawablePadding="25dp"
                    android:drawableRight="@drawable/icon_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/Setting"
                    android:text="Cài đặt"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/TTMH"
                    android:drawableLeft="@drawable/icon_setting"
                    android:drawablePadding="25dp"
                    android:drawableRight="@drawable/icon_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-3940256099942544/9214589741"
                    android:layout_below="@+id/Setting"
                    >
                </com.google.android.gms.ads.AdView>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>