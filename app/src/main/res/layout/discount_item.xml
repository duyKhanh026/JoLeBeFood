<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10px"
    android:padding="20px"
    android:background="@drawable/background_radius"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 20k món ăn"
                android:textSize="60px"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
    
            <TextView
                android:id="@+id/method_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use with momo"
                android:layout_below="@id/discount_text"
                android:textSize="40px"

                android:textColor="@color/black"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imagemethod"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:layout_marginRight="70px"
            tools:srcCompat="@drawable/momo_logo"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A6A3A3"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/ap_dung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Áp dụng tại một số nhà hàng"
            android:textSize="40px"

            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/toi_thieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Không yêu cầu đơn hàng tối thiểu"
            android:textSize="40px"

            android:textColor="@color/black"
            android:layout_below="@id/ap_dung"/>

    </RelativeLayout>
</LinearLayout>