<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món gà"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/txtID_LS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="#F44336"
            android:id="@+id/txtDanhGia_LS"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A3A3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/imgMonAn_LS"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:text="Chân gà rút xương"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#433C3C"
            android:layout_toRightOf="@id/imgMonAn_LS"
            android:id="@+id/txtTenMonAn_LS"
            android:paddingBottom="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="18sp"
            android:id="@+id/txtSoLuong_LS"
            android:layout_below="@id/txtTenMonAn_LS"
            android:layout_toRightOf="@id/imgMonAn_LS"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ113.000"
            android:textSize="18sp"
            android:layout_below="@id/txtSoLuong_LS"
            android:layout_alignParentRight="true"
            android:textColor="#F44336"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtGia_LS"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A3A3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 sản phẩm"
            android:textSize="18sp"
            android:padding="5dp"
            android:id="@+id/txtSoSanPham_LS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: "
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_toLeftOf="@id/txtTongTien_LS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ500.000"
            android:textSize="18sp"
            android:padding="5dp"
            android:id="@+id/txtTongTien_LS"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A3A3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Đơn hàng đã được giao thành công"
            android:textColor="@color/privateColor"
            android:padding="10dp"
            android:id="@+id/txtTinhTrangDonHang"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A3A3"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_mualai"
            android:text="Mua lại"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:id="@+id/btnMuaLai_LS"
            />

    </RelativeLayout>





</LinearLayout>