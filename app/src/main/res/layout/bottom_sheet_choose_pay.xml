<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Chọn phương thức thanh toán: "
            android:textSize="22sp"
            android:padding="10dp"
            android:id="@+id/lblChonPhuongThuc"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ABABAB"
            android:layout_below="@id/lblChonPhuongThuc"/>

    <RelativeLayout
        android:layout_below="@id/lblChonPhuongThuc"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Item_VNPay_Choose_pay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng VNPay"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20px"
                />

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:layout_marginRight="70px"
            android:src="@drawable/vnpay"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ABABAB"
        android:layout_below="@id/Item_VNPay_Choose_pay"/>


    <RelativeLayout
        android:layout_below="@id/Item_VNPay_Choose_pay"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Item_Bth_Choose_pay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20px"
            />

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:layout_marginRight="70px"
            android:src="@drawable/cash"
            />
    </RelativeLayout>


</RelativeLayout>