<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="5px"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="@color/black"
                    android:text="Cơm Gà"
                    android:gravity="top"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_product"
                    android:text="40.000đ"
                    android:textSize="8pt"
                    android:textColor="@color/privateColor"
                    android:gravity="bottom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sale_count"
                    android:text="Đã bán 27"
                    android:textSize="8pt"
                    android:textColor="@color/gray"
                    android:gravity="bottom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/describe_txt"
                    android:text="Mô tả"
                    android:textSize="8pt"
                    android:textColor="@color/gray"
                    android:gravity="bottom"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_butadd"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="20px"
                >

                <ImageButton
                    android:id="@+id/add_productbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_add_product"
                    android:src="@drawable/baseline_add_24"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>