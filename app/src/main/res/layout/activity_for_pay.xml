<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E1DCDC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtTitle_CT"
        >

        <ImageButton
            android:id="@+id/button_back_pay"
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@color/white"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đơn hàng"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_margin="15px"
            android:textStyle="bold"
            android:layout_toRightOf="@id/button_back_pay"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle_CT">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:id="@+id/icon_DC_CT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/icon_DC_CT"
                    android:id="@+id/txtDiaChi_title_CT"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lê Trung Kiên"
                    android:textSize="15sp"
                    android:layout_below="@id/txtDiaChi_title_CT"
                    android:paddingLeft="40dp"
                    android:id="@+id/txtName_CT_pay"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0931261009"
                    android:textSize="15sp"
                    android:layout_below="@id/txtName_CT_pay"
                    android:paddingLeft="40dp"
                    android:id="@+id/txtPhone_CT_pay"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhấn để lấy vị trí hiện tại"
                    android:textSize="15sp"
                    android:layout_below="@id/txtPhone_CT_pay"
                    android:paddingLeft="40dp"
                    android:id="@+id/txtDiaChi_CT_pay"
                    android:textColor="@color/privateColor"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/delivery"
                    android:id="@+id/icon_GH_CT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin phí giao hàng"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/icon_GH_CT"
                    android:id="@+id/txtPhiGiaoHang_title_CT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn vị tính:"
                    android:id="@+id/labelThongTinGH_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_below="@id/txtPhiGiaoHang_title_CT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.000 đ / 1 km"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtPhiGiaoHang_title_CT"
                    android:id="@+id/DonVi"
                    android:textSize="15sp"
                    android:padding="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoảng cách của bạn:"
                    android:id="@+id/labelKhoangcach_CTHD_pay"
                    android:layout_below="@+id/labelThongTinGH_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtKhoangCach_CTHD_pay"
                    android:layout_below="@+id/DonVi"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí giao hàng:"
                    android:id="@+id/labelPhiGH_CTHD_pay"
                    android:layout_below="@+id/labelKhoangcach_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtPhiGH_CTHD_pay"
                    android:layout_below="@+id/txtKhoangCach_CTHD_pay"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:padding="5dp"/>




            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách sản phẩm"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/labelDanhSach_CTHD_pay"
                    android:textColor="@color/black"
                    android:background="@color/white"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:id="@+id/progressBar_for_pay"
                    android:elevation="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listSP_CTDH_pay"
                    android:layout_below="@+id/labelDanhSach_CTHD_pay"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkbook"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/iconPayment_CTHD_pay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/iconPayment_CTHD_pay"/>

                <TextView
                    android:id="@+id/txtPhuongThuc_CTHD_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iconPayment_CTHD_pay"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:text="Chọn phương thức thanh toán"
                    android:textColor="@color/privateColor"
                    android:textSize="16sp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_details_discount"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/iconDiscount_CTHD_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áp dụng khuyến mãi"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/iconDiscount_CTHD_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn khuyến mãi"
                    android:textSize="16sp"
                    android:layout_below="@+id/iconDiscount_CTHD_pay"
                    android:layout_marginLeft="50dp"
                    android:padding="10dp"
                    android:id="@+id/txtDiscount_CTHD_pay"
                    android:textColor="@color/privateColor"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền:"
                    android:id="@+id/labelThanhTien_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ242.000"
                    android:id="@+id/txtThanhTien_CTHD_pay"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:padding="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí giao hàng:"
                    android:id="@+id/labelPhiGiaoHang_CTHD_pay"
                    android:layout_below="@+id/labelThanhTien_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_below="@id/txtThanhTien_CTHD_pay"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtPhiGiaoHangCTHD_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="7dp"
                    android:padding="5dp"
                    android:text="đ242.000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá:"
                    android:id="@+id/labelGiamGia_CTHD_pay"
                    android:layout_below="@+id/labelPhiGiaoHang_CTHD_pay"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-đ19.000"
                    android:id="@+id/txtGiamGia_CTHD_pay"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_below="@+id/txtPhiGiaoHangCTHD_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:id="@+id/labelTongTien_CTHD_pay"
                    android:layout_below="@+id/labelGiamGia_CTHD_pay"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ192.000"
                    android:id="@+id/txtTongTien_CTHD_pay"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_below="@+id/txtGiamGia_CTHD_pay"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_mualai"
                    android:text="Thanh toán đơn hàng"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:id="@+id/btnThanhToan_CTHD_pay"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>