        <activity
            android:name=".SignIn_and_SignUp.Login_Phone"
            android:exported="false" />
        <activity
            android:name=".SignIn_and_SignUp.MainMenu"
            android:exported="false" />
        <activity
            android:name=".SignIn_and_SignUp.GoogleSignIn"
            android:exported="false" />
